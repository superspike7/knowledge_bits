<%= form_with model: bit do |f| %>
  <div class="flex flex-col text-xl gap-2">
    <% if !bit.errors.empty? %>
      <div class="bg-red-100 p-2 rounded-md border border-primary">
        <% bit.errors.each do |message| %>
          <p class="text-xl text-primary"><%= message.full_message %></p>
        <% end %>
      </div>
    <% end %>

    <%= f.label :title, class: 'font-bold' %>
    <%=
      f.text_field :title,
                   class: 'border border-primary outline-none rounded-xl p-2 w-full'
    %>
  </div>

  <div class="flex flex-col text-xl gap-2 mt-4">
    <%= f.label :author, class: 'font-bold' %>
    <%=
      f.text_field :author,
                   class: 'border border-primary outline-none rounded-xl p-2 w-full'
    %>
  </div>

  <div class="flex flex-col text-xl gap-2 mt-4">
    <%= f.label :body, class: 'font-bold' %>
    <%=
      f.text_area :body,
                  class: 'border border-primary outline-none rounded-xl p-2 w-full',
                  rows: '5'
    %>
  </div>

  <%=
    f.submit 'Submit',
             class:
               'bg-primary text-white p-3 rounded-lg text-2xl mt-4 block mx-auto font-medium'
  %>
<% end %>
