<div
  class="w-[30%] bg-white border-2 border-primary mx-auto mt-20 rounded-[40px] shadow-[0_-35px_0_0_rgba(212,1,2,1)] py-8 px-12"
>
  <h1 class="text-3xl font-bold text-center mb-4">Create Knowledge Bit</h1>
  <%= form_with model: @bit do |f| %>

    <div class="flex flex-col text-xl gap-2">
      <%= f.label :title, class: "font-bold" %>
      <%= f.text_field :title, class: "border border-primary outline-none rounded-xl p-2" %>
    </div>

    <div class="flex flex-col text-xl gap-2 mt-4">
      <%= f.label :author, class: "font-bold" %>
      <%= f.text_field :author, class: "border border-primary outline-none rounded-xl p-2" %>
    </div>

    <div class="flex flex-col text-xl gap-2 mt-4">
      <%= f.label :body, class: "font-bold" %>
      <%= f.text_area :body, class: "border border-primary outline-none rounded-xl p-2", rows: "5" %>
    </div>

    <%= f.submit "Submit", class: "bg-primary text-white p-3 rounded-lg text-2xl mt-4 block mx-auto font-medium" %>

  <% end %>
</div>
